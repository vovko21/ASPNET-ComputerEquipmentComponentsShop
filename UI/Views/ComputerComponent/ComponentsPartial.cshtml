@model List<UI.Models.ComponentViewModel>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-400">
                <img class="card-img-top h-200 img-fluid p-2" src="@item.Image" alt="Card image cap">
                <div class="card-body">
                    @Html.ActionLink($"{item.Name}", "Show", "ComputerComponent", new { id = item.Id }, htmlAttributes: new { @class = "card-title f-25" })
                    <p class="card-text">Producer: <strong>@item.Producer</strong></p>
                    <p class="card-text">Type: <strong>@item.Type</strong></p>
                    <p class="card-text">Price: @item.Price $</p>
                </div>
            </div>
        </div>
    }
</div>

